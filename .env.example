# Variables d'environnement SentinelIQ Harvest v2.5.1
# Copiez ce fichier vers .env et key.env et renseignez les vraies valeurs

# Variables générales
NODE_ENV=production
PORT=3000
HEALTH_PORT=3000
NODE_OPTIONS=--max-old-space-size=2048

# Configuration Supabase - OBLIGATOIRE
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_KEY=your_supabase_service_role_key_here

# Variables spécifiques au conteneur (automatiques en production)
DOCKER_ENV=false
PUPPETEER_DISABLE_SECURITY=false

# Instructions:
# 1. Copiez ce fichier vers .env pour les variables générales
# 2. Créez key.env avec vos vraies clés Supabase (ne pas committer)
# 3. Pour Coolify: configurez les variables dans l'interface web

# Configuration Logs
DEBUG=true
VERBOSE=true

# Configuration Cortex
CORTEX_PORT=3001
CORTEX_HOST=localhost
CORTEX_LOG_LEVEL=INFO
ENABLE_CORTEX_PERF_LOGS=true
ENABLE_CORTEX_MEM_MONITOR=true
ENABLE_SCRAPING_LOGS=true

# Mode d'environnement
NODE_ENV=production
CORTEX_MODE=full

# Webhook (legacy - peut être laissé vide)
WEBHOOK_TOKEN=
